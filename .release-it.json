{
    "github": {
      "release": true,
      "web": true,
      "requireCleanWorkingDir": false
    },
    "hooks": {
      "after:bump": "npx lerna-changelog -p"
    },
    "git": {
      "requireUpstream": false,
      "changelog": "npx lerna-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "plugins": {
      "@csmith/release-it-calver-plugin": {
        "format": "yyyy.mm.minor",
        "increment": "calendar"
      }
    }
  }
  